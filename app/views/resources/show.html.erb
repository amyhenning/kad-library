<div class="shadow-box col-10 offset-1">
	<%= @resource.name %>

	<br />

	<% unless current_user.favorite_resources.exists?(id: @resource_id) %>
		<%= link_to 'Bookmark this resource', favorite_resources_path(resource_id: @resource), method: :post %>
	<% else %>
		<%= link_to 'Remove from bookmarks', favorite_resource_path(@resource), method: :delete %>
	<% end %>
</div>