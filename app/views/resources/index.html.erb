<div class="container hero">
  <div class="row col-10 offset-1 page-row align-middle">
    <div class="hero-text my-auto">
      <h2>
        <% if @resource_category != nil %>
          <%= @resource_category %>
        <% else %>
          All Resources
        <% end %>
       </h2> 
    </div>
  </div>
</div>

<div class="row col-10 offset-1">
  <% @resources.each do |resource| %>
    <div class="resource col-12 col-sm-4">
      <div class="shadow-box">
        <h2><%= resource.name %></h2>
        <span class="badge badge-default"><%= resource.resource_category %></span>
        <br />
        <%= resource.description %>
        <br /><br />
        <p class="float-right">            
          <%= link_to resource_path(resource) do %>
            <i class="fa fa-info-circle" aria-hidden="true"></i>
          <% end %>

          <% if current_user %>
            <% if current_user.favorite_resources.exists?(id: resource.id) %>
               &nbsp; <%= link_to favorite_resource_path(resource), method: :delete, data: {confirm: 'Are you sure you want to delete this bookmark?'} do %>
               <i class="fa fa-trash"></i>
            <% end %>
            <% else %>
               &nbsp; <%= link_to favorite_resources_path(resource_id: resource), method: :post do %>
               <i class="fa fa-bookmark"></i>
               <% end %>
            <% end %>
          <% else %>
             &nbsp; <small><%= link_to 'Log in', new_user_session_path %> or <%= link_to 'sign up', new_user_registration_path %> to bookmark this resource.</small>
          <% end %>
        </p>
        <br class="clear" />
      </div>
      <br class="clear" />
    </div>

  <% end %>
</div>
