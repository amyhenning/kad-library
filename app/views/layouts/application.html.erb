<!DOCTYPE html>
<html>
  <head>
    <title>KAD Library</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div id="flex-content-container">
			<nav class="navbar navbar-toggleable-md navbar-light bg-primary">
			  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			    <span class="navbar-toggler-icon"></span>
			  </button>
			  <%= link_to 'KAD Library', root_path, class: 'navbar-brand' %>

			  <div class="collapse navbar-collapse" id="navbarSupportedContent">
			    <ul class="navbar-nav mr-auto">
			      <li class="nav-item">
			        <a class="nav-link" href="#">Start Here</a>
			      </li>
			      <li class="nav-item dropdown">
			        <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			          Resources by Type
			        </a>
			        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
			        	<a class="dropdown-item" href="#">Adoption Agencies</a>
			          <a class="dropdown-item" href="#">Books</a>
			          <a class="dropdown-item" href="#">DNA Testing</a>
			          <a class="dropdown-item" href="#">Events</a>
			          <a class="dropdown-item" href="#">Film, TV, and Music</a>
			          <a class="dropdown-item" href="#">KAD-Run Organizations</a>
			          <a class="dropdown-item" href="#">Local Groups</a>
			          <a class="dropdown-item" href="#">Tours</a>
			          <a class="dropdown-item" href="#">Other</a>
	        		</div>
	     			</li>

			      <li class="nav-item dropdown">
			        <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			          Resources by Location
			        </a>
			        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
			          <a class="dropdown-item" href="#">By State (U.S.)</a>
			          <a class="dropdown-item" href="#">By Country (International)</a>
	        		</div>
	     			</li>

	   			 <li class="nav-item">
		        <%= link_to 'Submit a Resource', new_resource_path, class: 'nav-link' %>
		       </li>
		       <li class="nav-item">
		       	<%= link_to 'About', about_path, class: 'nav-link' %>
		       </li>

			    </ul>

			    <ul class="navbar-nav">
			    	<% if user_signed_in? %>
			    		<li class="nav-item">
			    			<%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
			    		</li>
			    	<% else %>
			    		<li class="nav-item">
				    		<%= link_to 'Log in', new_user_session_path, class: 'nav-link' %>
				    	</li>
				    	<li class="nav-item">
				    		<%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
				    	</li>
			    	<% end %>
			    </ul>
			  </div>
			</nav>

			<% if notice.present? %>
				<p class="alert alert-info"><%= notice %></p>
			<% end %>
			<% if alert.present? %>
	    	<p class="alert alert-danger"><%= alert %></p>
	    <% end %>
	    
	    <%= yield %>
	  </div>
	 <div id="footer">
	 	<div class="container">
	 		<b>Footer Here</b>
	 		<br />
	 		<%= link_to 'Test link', '#' %>
	 	</div>
	 </div>
  </body>
</html>
